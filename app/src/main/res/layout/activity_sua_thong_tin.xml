<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListPhim.SuaThongTin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SỬA THÔNG TIN TÀI KHOẢN"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"
        android:background="@color/xam">

    </LinearLayout>

    <EditText
        android:id="@+id/edt_xacNhanMK"
        android:layout_marginTop="25dp"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:hint="Nhập mật khẩu hiện tại"
        android:background="@drawable/stroke"
        android:layout_gravity="center"
        android:paddingLeft="7dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin"
        android:layout_marginLeft="50dp"
        android:id="@+id/btn_xacNhanMK"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/layout_suaTT"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="35dp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="Nhập mật khẩu hiện tại"
            android:background="@drawable/stroke"
            android:layout_gravity="center"
            android:paddingLeft="7dp"
            android:id="@+id/edt_suaHoTen"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"
            />

        <EditText
            :layout_marginTop="25dp"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="Nhập mật khẩu hiện tại"
            android:background="@drawable/stroke"
            android:layout_gravity="center"
            android:paddingLeft="7dp"
            android:id="@+id/edt_suaEmail"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/txt_suaSDT"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="Nhập mật khẩu hiện tại"
            android:background="@drawable/stroke"
            android:layout_gravity="center"
            android:paddingLeft="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="25dp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:hint="Nhập mật khẩu hiện tại"
            android:background="@drawable/stroke"
            android:layout_gravity="center"
            android:paddingLeft="7dp"
            android:id="@+id/edt_suaMatKhau"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa thông tin"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:id="@+id/btn_suaTTTK"
            />
    </LinearLayout>



</LinearLayout>